<h1>バイクブログ</h1>

<p><%= notice %></p>

<table>
  <tr class = "row col-sm-12">
    <th >タイトル</th>
    <th >内容</th>
  </tr>
  
<% @blogs.each do |blog| %>
  <tr class="row col-sm-12 col-md-6">
    <td ><%= blog.title %></td>
    <td ><%= blog.content %></td>
    <td ><%= link_to '詳細確認', blog_path(blog.id),class: "btn btn-info" %></td>
    <td ><%= link_to "ブログ編集", edit_blog_path(blog.id), class: "btn btn-info",data: { confirm: '本当に編集してもよいですか？' } %></td>
    <td ><%= link_to 'ブログ削除', blog_path(blog.id),class: "btn btn-info", method: :delete ,data: { confirm: '本当に削除してもよいですか？' } %></td>
  </tr>
<% end %>
</table>

<br>

<%= link_to '新しくブログを投稿する', new_blog_path %>